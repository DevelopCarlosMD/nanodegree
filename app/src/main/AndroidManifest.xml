<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.leo.nanodegree" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SpotifySearcherActivity"
            android:label="@string/title_activity_spotify_streamer" >
        </activity>
        <activity
            android:name=".ui.TopArtistSongsActivity"
            android:label="@string/title_activity_top_artist_songs" >
        </activity>
        <activity
            android:name=".ui.SpotifyBaseActivity"
            android:label="@string/title_activity_spotify_base" >
        </activity>
    </application>

</manifest>
